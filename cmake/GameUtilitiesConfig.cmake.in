@PACKAGE_INIT@

set(VALID_COMPONENTS @GU_LIBS@)

#Validate components
foreach(VAR ${GameUtilities_FIND_COMPONENTS})
	list(FIND VALID_COMPONENTS ${VAR} INDEX)
	if(${INDEX} MATCHES -1)
		if(NOT GameUtilities_FIND_QUIETLY)
			message(FATAL_ERROR "Invalid component ${VAR} valid components are ${VALID_COMPONENTS}")
		endif()	
	endif()
	unset(INDEX)
endforeach()

#If no components are supplied to find_package we will assume all components should be found.
if(GameUtilities_FIND_COMPONENTS STREQUAL "")
	set(GameUtilities_FIND_COMPONENTS ${VALID_COMPONENTS})
endif()

unset(VALID_COMPONENTS)

#Define package root
if(NOT DEFINED GameUtilities_ROOT)
	set_and_check(GameUtilities_ROOT ${PACKAGE_PREFIX_DIR})
endif()

#Package version
set(GameUtilities_VERSION @GameUtilities_VERSION@)

#List of include directories for the package
set(GameUtilities_INCLUDE_DIRECTORIES ${PACKAGE_PREFIX_DIR}$<BUILD_INTERFACE:/libraries>/include)

#List of library direcotries
set_and_check(GameUtilities_LIBRARY_DIRECTORIES ${PACKAGE_PREFIX_DIR}/lib)

#When the static version of the library is requested
#We define a variable to make locating the static version esyer
if(GameUtilites_STATIC_LIBS)
	set(STATIC_LIB_POSTFIX "Static")
endif()

#Find all components
foreach(VAR ${GameUtilities_FIND_COMPONENTS})
	set_and_check(EXPORT_PATH "${CMAKE_CURRENT_LIST_DIR}/GameUtilities${VAR}${STATIC_LIB_POSTFIX}-Exports.cmake")	
	if(EXISTS "${EXPORT_PATH}")
		include("${EXPORT_PATH}")		
		set(GameUtilities_${VAR}_FOUND True)

		#Print message that component was found
		if(NOT GameUtilities_FIND_QUIETLY)
			message("Found component GameUtilities-${VAR}")
		endif()
	else()
		set(GameUtilities_${VAR}_FOUND False)

		#Print message that component was found
		if(NOT GameUtilities_FIND_QUIETLY)
			message(FATAL_ERROR "Component not found GameUtilities-${VAR}")
		endif()
		
	endif()
	unset(EXPORT_PATH)
endforeach()

unset(STATIC_LIB_POSTFIX)

#Set GameUtilities_FOUND to true if all components were found and false otherwise
check_required_components(${PROJECT_NAME})
